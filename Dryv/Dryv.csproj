<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.2</TargetFramework>
    <Version>6.0.0-pre.40</Version>
    <Copyright>2020 Munir Husseini</Copyright>
    <PackageProjectUrl>https://github.com/mhusseini/Dryv</PackageProjectUrl>
    <PackageLicense>https://github.com/mhusseini/Dryv/blob/master/LICENSE</PackageLicense>
    <RepositoryUrl>https://github.com/mhusseini/Dryv.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>model-validation, JavaScript, C#</PackageTags>
    <Description>Base classes for Dryv. Dryv provides complex model validation for server and client made easy. Write complex model validation rules in C# once. Dryv will generate JavaScript for client-side validation.</Description>
    <Authors>Munir husseini</Authors>
    <Company>Munir husseini</Company>
    <PackageIcon>dryv.png</PackageIcon>
    <ApplicationIcon>dryv.ico</ApplicationIcon>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <LangVersion>8</LangVersion>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <WarningLevel>0</WarningLevel>
  </PropertyGroup>

  <ItemGroup>
    <None Include="dryv.png" Pack="true" PackagePath="\" />
  </ItemGroup>
  
